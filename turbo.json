{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "tasks": {
    "app:prepare": {
      "cache": false
    },
    "pkg:prepare": {
      "dependsOn": ["^pkg:prepare"],
      "cache": false
    },
    "cleanup": {
      "cache": false
    },
    "build:clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": ["$TURBO_DEFAULT$", ".env.development.local", ".env.local", ".env.development", ".env"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env.production.local", ".env.local", ".env.production", ".env"],
      "outputs": ["dist/**", ".output/**"]
    },
    "test": {
      "inputs": ["$TURBO_DEFAULT$", ".env.development.local", ".env.local", ".env.development", ".env"]
    },
    "lint": {},
    "typecheck": {},
    "coverage": {
      "outputs": ["coverage/**"]
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"]
    },
    "release": {
      "dependsOn": ["^release"],
      "outputLogs": "new-only"
    },
    "release:test": {
      "dependsOn": ["^release:test"],
      "outputLogs": "new-only"
    }
  }
}
